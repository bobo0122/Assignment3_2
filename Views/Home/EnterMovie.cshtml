@{
    ViewBag.Title = "Movie Submission Form";
}


@model Assignment3_2.Models.ApplicationResponse


<div class="container">

    <div class="row">
        <div class="col">

        </div>
        <div class="col">

            <form class="form-horizontal" asp-action="EnterMovie" method="post">

                <div>
                    <label asp-for="Category">Category: </label>
                    <input asp-for="Category" />
                </div>
                <div>
                    <label asp-for="Title">Title:</label>
                    <input asp-for="Title" />
                </div>
                <div>
                    <label asp-for="Year">Year:</label>
                    <input asp-for="Year" />
                </div>
                <div>
                    <label asp-for="Director">Director:</label>
                    <input asp-for="Director" />
                </div>
                <div>
                    <label asp-for="SelectRatingType">Rating:</label>
                    <select asp-for="SelectRatingType">
                        <option value="">--Select One--</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>


                </div>

                <div>
                    @Html.ValidationMessageFor(model => model.Edited, "", new { @class = "text-danger" })
                    <label asp-for="Edited">Edited:</label>
                    <select asp-for="Edited">
                        <option value="">--Select One--</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div>
                    <label asp-for="LentTo">Lent To:</label>
                    <input asp-for="LentTo" />
                </div>
                <div>
                    <label asp-for="Notes">Notes:</label>
                    <input asp-for="Notes" />
                </div>
                <div asp-validation-summary="All"></div>
                <button type="submit" class="btn-primary">Submit Your Movie</button>

                <br />

            </form>



        </div>
        <div class="col">

        </div>
    </div>
</div>

